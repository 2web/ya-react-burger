{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2015"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "checkJs": true,
    "noImplicitAny": false,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "cypress"
  ],
  "exclude": [
    "node_modules",
    "cypress/**/*",
    "*.cy.tsx",
  ]
}
